# Configurações do Ambiente - RPG Backend

# Configurações do Servidor
PORT=8080
HOST=localhost

# Banco de Dados
# Para SQLite (padrão - não precisa configurar)
# DATABASE_URL=file:./data/rpg.db?cache=shared&mode=rwc

# Para PostgreSQL
# DATABASE_URL=postgres://username:password@localhost:5432/rpg_backend?sslmode=disable

# Para MySQL
# DATABASE_URL=username:password@tcp(localhost:3306)/rpg_backend?parseTime=true

# Configurações de Autenticação
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRATION=24h

# Configurações de Log
LOG_LEVEL=info
LOG_FORMAT=text

# Configurações de Desenvolvimento
# Para debug detalhado, use: LOG_LEVEL=debug
# GIN_MODE=debug
